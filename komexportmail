        'not_exporting': "Du exporterar inte möte %s.",
        'not_exported_to': "Möte %s exporteras inte till %s.",
        'not_supervisor': "Du är inte organisatör för möte %s.",
        'unknown_admin': "Okänt adminkommando.",
        'unknown_command': "Okänt kommando: %s",
