    # Function, command words, syntax string
    commands = [[help_cmd, '?', 'hjälp', 'help', None],

                [add_cmd, '+', 'addera', 'add',
                 'Syntax: + <möte> <e-postadress>'],

                [sub_cmd, '-', 'subtrahera', 'subtract', 'sub',
                 'Syntax: - <möte> <e-postadress>'],

